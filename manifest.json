{

  "manifest_version": 2,
  "name": "steam-trading-helper",
  "version": "1.0",

  "description": "interact quicker in trade offer windows",

  "icons": {
    "48": "icons/border-48.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://steamcommunity.com/tradeoffer/new*"],
      "js": ["index.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "webRequest",    
    "webRequestBlocking",
    "webRequestFilterResponse.serviceWorkerScript","webRequestFilterResponse",
    "<all_urls>"
  ]
}
